<%- include("header") %>
    <%if(status=='empty'){

}else{
    if (status=='Error') { %>
        <script>
            swal({
                title: 'Something is wrong!',
                text: "<%= message%>",
                type: 'question',
                padding: '2em'
            })
        </script>
        <% }else{%>
            <script>
                swal({
                    title: 'Order created..',
                    text: "Order created successfully",
                    type: 'success',
                    padding: '2em'
                })
            </script>
            <%}}%>

                <div id="content" class="main-content">

                    <div class="layout-top-spacing">

                        <div id="basic" class="col-lg-12 col-sm-12 col-12 layout-spacing">
                            <div class="statbox widget box box-shadow">
                                <div class="widget-header">
                                    <div class="row">
                                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                            <h3><b>Create Order</b></h3>

                                            <div class="mt-4">
                                                <h5>order details</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <form action="/order/addOrder" method="POST">
                                    <input name="type" value="HOTEL" hidden>

                                    <div class="input-group mt-4 mb-4">
                                        <p>Select hotel</p>

                                        <select name="ref" id="list" class="placeholder js-states form-control">
   
</select>
                                    </div>
                                    <p>delivery date</p>

                                    <div class="input-group mb-4">
                                        <input type="date" name="date" id="dateTimeFlatpickr" class="form-control" placeholder="dd/mm/yyyy" aria-label="dd/mm/yyyy" required>
                                    </div>
                                    <div class="table-responsive mb-4">
                                        <p>Product & Quantity</p>

                                        <table id="CreateOrderstyle-3" class="table style-3  table-hover">
                                            <thead>
                                                <tr>
                                                    <th class="checkbox-column text-center"> Record Id </th>
                                                    <th> Name</th>
                                                    
                                                    <th>quantity</th>
                                                    <!-- <th>price</th> -->

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <%  let c=1;
                                data.forEach((product)=>{ %>
                                                    <tr>
                                                        <td class="checkbox-column text-center">
                                                            <%= product.id%>
                                                        </td>
                                                        <td>
                                                            <%= product.name %>
                                                        </td>
                                                        
                                                        <td>
                                                            <input name="quantity<%= c %>"  class="form-control" type="number" step="0.01" placeholder=" quantity" aria-label="enter the quantity">
                                                            <input name="product_id<%= c %>" value="<%=product.id%>" hidden>

                                                        </td>
                                                        <!-- <td> -->
                                                            <input name="price<%= c%>"  class="form-control" type="number" value="0"  placeholder="price" aria-label="enter the price" hidden>

                                                        <!-- </td> -->
                                                    </tr>
                                                    <% c++; %>
                                                        <% }); %>
                                                            <input name="count" value="<%=c%>" hidden>





                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="container">
                                        <div class="center">
                                            <button class="mt-4 btn btn-primary">Submit</button>

                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
                <script src="/assets/axios.js"></script>

                <script>
                    function makeGetRequest(path) {
                        axios.get(path).then(
                            (response) => {
                                var result = response.data;

                                const sb = document.querySelector('#list');
                                console.log(result);
                                result.map((users) => {
                                    let option = new Option(users.name, users.id);
                                    // add it to the list
                                    sb.add(option, users.id);
                                });

                                // console.log(result.details[0].name);
                            },
                            (error) => {
                                console.log(error);
                            }
                        );
                    }
                    makeGetRequest('<%=domain%>/interact/getHotel');
                </script>
