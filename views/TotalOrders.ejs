<%- include("header") %>
    <div id="content" class="main-content">

        <div class="layout-top-spacing">

            <div id="basic" class="col-lg-12 col-sm-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header mb-4">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h3><b>Total Order</b></h3>


                            </div>
                        </div>
                    </div>




                    <p>delivery date</p>

                    <div class="input-group mb-4">
                        <input type="date" name="date" class="form-control" value="<%= data[0].date %>" placeholder="dd/mm/yyyy" aria-label="dd/mm/yyyy" disabled>
                    </div>
                    <div class="table-responsive mb-4">
                        <p>Hotels-Product & Quantity</p>

                        <table id="style-3" class="table style-3  table-hover">
                            <thead>
                                <tr>
                                    <th class="checkbox-column text-center"> Product Name </th>
                                    <% 
                                    let hotels = [];
                                    data.forEach((product)=>{
                                        if(!hotels.includes(product.hotel_id)){
                                        %>
                                    <th><%= product.hotel_name%></th>
                                 <%
                                    hotels.push(product.hotel_id)
                                     } }) %>
                                  <th>Total Quantity</th>
                                </tr>
                            </thead>
                            <tbody>

                                <%  
                                product.map((product)=>{
                                    let unit;
                               
                            %>
                                    <tr>
                                        <td  class="checkbox-column text-center"><%=product.name%></td>
                                        <% let totalPro = 0;%>
                                    <% hotels.map((hotel)=>{
                                       
                                        let total=0;
                                        data.forEach((data)=>{
                                            if(data.hotel_id==hotel && data.p_id == product.id){
                                            total = total + parseInt(data.quantity);
                                            totalPro = totalPro + parseInt(data.quantity);
                                            unit = product.weight_type;
                                            } })
                                        %>
                                        <th><%=total%></th>
                                        <%
                                        }) %>
                                        <th><%= totalPro%> <%= unit%></th>
                                    </tr>
                                
                                    <%
                              
                                  })%>



                            </tbody>
                        </table>
                    </div>



                </div>
            </div>
        </div>
    </div>
    </div>



    <%- include("footer") %>